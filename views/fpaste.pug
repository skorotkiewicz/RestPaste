include header.pug

div.container

    div.access
        div.api
            p Usage
                hr
                p API Key: 
                    span.get #{apikey}

                p 
                    span GET 
                        span.get http://#{host}
                        span.color /api/
                        span.info fpaste/json/
                        span.color :apikey?fields=petName,petType

                p
                    span Get full paste: 
                        span.get http://#{host}
                        span.color /api/
                        span.info fpaste/json/
                        span.color :apikey

        div.delete
            p 
                span To delete this paste
                hr
                p
                span GET  
                    span.get http://#{host}
                    span.color /api/paste/delete/#{password}

include footer.pug